<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieSync" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. Netflix uses mostly red. -->
        <item name="colorPrimary">@color/netflix_red</item>
        <item name="colorPrimaryVariant">@color/netflix_dark_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. Netflix uses black and grey for secondary elements. -->
        <item name="colorSecondary">@color/netflix_grey</item>
        <item name="colorSecondaryVariant">@color/netflix_black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.MovieSync.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MovieSync.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MovieSync.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>