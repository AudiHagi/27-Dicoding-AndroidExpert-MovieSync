<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieSync" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color for dark mode -->
        <item name="colorPrimary">@color/netflix_dark_red</item>
        <item name="colorPrimaryVariant">@color/netflix_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color for dark mode -->
        <item name="colorSecondary">@color/netflix_grey</item>
        <item name="colorSecondaryVariant">@color/netflix_black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color for dark mode -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        <!-- Customize other attributes for dark mode -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/netflix_grey</item>
        <!-- Add any other specific attributes for dark mode -->
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.MovieSync.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>